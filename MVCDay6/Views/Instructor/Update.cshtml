@model InstructorViewModel
@{
    ViewData["Title"] = "Update";
}


<form asp-action="Add" asp-controller="Instructor">
    <div class=" pt-2">
        <label asp-for="@Model.Name">Name</label>
        <input asp-for="@Model.Name" type="text" name="Name" value="@Model.Name" id="Name" class="form form-control" />
    </div>

    <div class=" pt-2">
        <label asp-for="@Model.ImgSrc">ImgSrc</label>
        <input asp-for="@Model.ImgSrc" type="text" name="ImgSrc" value="@Model.ImgSrc" id="ImgSrc" class="form form-control" />
    </div>

    <div class=" pt-2">
        <label asp-for="@Model.Address">Address</label>
        <input asp-for="@Model.Address" type="text" name="Address" value="@Model.Address" id="Address" class="form form-control" />
    </div>

    <div class=" pt-2">
        <label asp-for="@Model.Salary">Salary</label>
        <input asp-for="@Model.Salary" type="number" name="Salary" value="@Model.Salary" id="Salary" class="form form-control" />
    </div>

    <input type="submit" class="btn btn-warning mt-4" value="Update" asp-action="Update" asp-controller="Instructor" />
</form>